<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/tbank_yellow</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/transparent</item>
        <item name="queryHint">"Поиск"</item>
        <item name="iconifiedByDefault">false</item>

        <item name="closeIconTint">@color/icons_gray</item>
        <item name="searchIcon">@drawable/icon_search</item>


        <item name="android:textColorPrimary">@color/icons_black</item>
        <item name="android:textColorHint">@color/icons_gray</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="placeholderTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="endIconTint">@color/black</item>
        <item name="helperTextTextColor">@color/error_red</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="buttonTint">@color/icons_black</item>
    </style>
</resources>
